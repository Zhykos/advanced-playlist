{
    "name": "video-custom-feed",
    "version": "1.0.0",
    "author": "Thomas 'Zhykos' Cicognani",
    "private": true,
    "description": "Create your own video feed without any subscriptions",
    "keywords": [
        "video",
        "video feed",
        "youtube",
        "custom"
    ],
    "license": "MIT",
    "scripts": {
        "start": "node ./custom-video-feed/bin/server/javascripts/main-express.js",
        "dev": "nodemon ./src/bin/server/javascripts/main-express.js",
        "chrome-test": "set BROWSER_TEST=chrome && jest --coverage",
        "firefox-test": "set BROWSER_TEST=firefox && jest --coverage"
    },
    "dependencies": {
        "cookie-parser": "~1.4.5",
        "express": "~4.17.1",
        "http-errors": "~1.8.0",
        "lowdb": "1.0.0",
        "morgan": "~1.10.0",
        "pug": "^3.0.2"
    },
    "devDependencies": {
        "chromedriver": "^92.0.1",
        "debug": "~4.3.2",
        "geckodriver": "^2.0.3",
        "gm": "^1.23.1",
        "jest": "^27.1.0",
        "jest-expect-message": "^1.0.2",
        "jimp": "^0.16.1",
        "nodemon": "^2.0.12",
        "png-to-jpeg": "^1.0.1",
        "selenium-webdriver": "3.x"
    },
    "nodemonConfig": {
        "ignore": [
            "db.json",
            "tests/*.*"
        ],
        "delay": "2500"
    },
    "jest": {
        "testRegex": "./tests/(server|client)-.+test.js$",
        "collectCoverage": true,
        "collectCoverageFrom": [
            "<rootDir>/src/bin/server/javascripts/vcf*.js",
            "!<rootDir>/node_modules/"
        ],
        "moduleNameMapper": {
            "./etc/channels.json": "<rootDir>/tests/resources/tests-parameters.json"
        },
        "setupFilesAfterEnv": [
            "jest-expect-message"
        ]
    }
}